extends ../layout/index

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido

    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Real
            span.font-normal Estate
        h2.text-center.text-3xl.font-extrabold= pagina 

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900.text-center General Information

                    p.text-gray-700 Add additional information of your property in sale.

                    div         
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="title") Announcement Title
                        input#title.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Your Title, ex. Beach House" type="text" name="title")
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/2")       
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="category") Category
                            select#category.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="category")
                                option(value="") - Select -

                        div(class="md:w-1/2")              
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="price") Price
                            select#price.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="price")
                                option(value="") - Select -

            
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                        div(class="md:w-1/3")       
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="rooms") Rooms
                            select#rooms.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="rooms")
                                option(value="") - Select -
                                - var n = 1;
                                    while n < 5
                                        option(value=n) #{n++}

                        div(class="md:w-1/3")              
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="price") Parking Lot
                            select#parking.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="parking")
                                option(value="") - Select -
                                - var n = 1;
                                    while n < 5
                                        option(value=n) #{n++}

                        div(class="md:w-1/3")              
                            label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="price") WC
                            select#wc.w-full.px-4.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")
                                option(value="") - Select -
                                - var n = 1;
                                    while n < 5
                                        option(value=n) #{n++}
                    div.border-gray-200.border-t.py-5.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Location
                    p.text-gray-600 Select the location of the property
                        #map.h-96

                        div
                            p.street
                        
                        input(type="hidden" class="street" id="street")
                        input(type="hidden" class="lat" id="lat")
                        input(type="hidden" class="lng" id="lng")
                    
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/map.js")